{% extends 'base.html.twig' %}

{% block body %}
<div class="container mt-3 text-center">
    <table class="table table-light">
            <tr>
        <th colspan="3">
            <h1 class="text text-primary">List of Origins</h1>
        </th>
        <th>
            <a class="text-decoration-none" href="{{ path('origin_add') }}">
                <img src="{{ asset('images/buttons/add.png') }}" width="40" height="40">
            </a>
        </th>
    </tr>
    <tr>
        <th class="text text-success">Origin Id</th>
        <th class="text text-success">Origin Name</th>
        <th class="text text-success">Origin Image</th>
        <th class="text text-success">Actions</th>
    </tr>
    {% for origin in origins %}
        <tr>
            <td>{{ origin.id }}</td>
            <td>{{ origin.name }}</td>
            <td>
                 <a class="text-decoration-none" href="{{ path('origin_detail', {'id' : origin.id }) }}">
                    <img src="{{ origin.image }}" width="150" height="100">
                </a>
           </td>
            <td>
                <a class="text-decoration-none" href="{{ path('origin_detail', {'id' : origin.id }) }}">
                    <img src="{{ asset('images/buttons/detail.png') }}" width="40" height="40">
                </a>
                <a class="text-decoration-none" href="{{ path('origin_edit', {'id' : origin.id }) }}">
                    <img src="{{ asset('images/buttons/edit.png') }}" width="40" height="40">
                </a>
                <a class="text-decoration-none" href="{{ path('origin_delete', {'id' : origin.id }) }}"
                onclick="return confirm('You are about to delete this origin. Proceed with deletion?');"
                >
                    <img src="{{ asset('images/buttons/delete.png') }}" width="40" height="40">
                </a>
            </td>
        </tr>
    {% endfor %}
    </table>
</div>
{% endblock %}
