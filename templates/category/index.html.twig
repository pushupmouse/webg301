{% extends 'base.html.twig' %}

{% block body %}
<div class="container mt-3 text-center">
    <table class="table table-light">
            <tr>
        <th colspan="3">
            <h1 class="text text-primary">List of Categories</h1>
        </th>
        <th>
            {# <a class="text-decoration-none" href="{{ path('laptop_add') }}">
                <img src="{{ asset('images/buttons/add.png') }}" width="40" height="40">
            </a> #}
        </th>
    </tr>
    <tr>
        <th class="text text-success">Category Id</th>
        <th class="text text-success">Category Name</th>
        <th class="text text-success">Actions</th>
    </tr>
    {% for category in categories %}
        <tr>
            <td>{{ category.id }}</td>
            <td>{{ category.name }}</td>
            <td>
                <a class="text-decoration-none" href="{{ path('laptop_detail', {'id' : category.id }) }}">
                    <img src="{{ asset('images/buttons/detail.png') }}" width="40" height="40">
                </a>
                <a class="text-decoration-none" href="{{ path('laptop_edit', {'id' : category.id }) }}">
                    <img src="{{ asset('images/buttons/edit.png') }}" width="40" height="40">
                </a>
                <a class="text-decoration-none" href="{{ path('laptop_delete', {'id' : category.id }) }}"
                onclick="return confirm('Are you sure to delete this category ?');"
                >
                    <img src="{{ asset('images/buttons/delete.png') }}" width="40" height="40">
                </a>
            </td>
        </tr>
    {% endfor %}
    </table>
</div>
{% endblock %}
