{% extends 'base.html.twig' %}

{% block body %}
<div class="container mt-3 text-center">
    <div class="card-group">
        <div class="row">
            {% for laptop in laptops %}
                <div class="col mt-4 mt-4">
                    <div class="card">
                        <img src="{{ laptop.image }}" width="150" height="150">
                        <h3 class="text text-primary">{{ laptop.name }}</h3>
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>
</div>
{% endblock %}
