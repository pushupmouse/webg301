{% extends 'base.html.twig' %}

{% block body %}
<div class="container mt-3 text-center">
    <table class="table table-light">
            <tr>
        <th colspan="3">
            <h1 class="text text-primary">List of Laptops</h1>
        </th>
        <th>
            <a class="text-decoration-none" href="{{ path('laptop_add') }}">
                <img src="{{ asset('images/buttons/add.png') }}" width="40" height="40">
            </a>
        </th>
    </tr>
    <tr>
        <th class="text text-success">Laptop Id</th>
        <th class="text text-success">Laptop Name</th>
        <th class="text text-success">Laptop Image</th>
        <th class="text text-success">Actions</th>
    </tr>
    {% for laptop in laptops %}
        <tr>
            <td>{{ laptop.id }}</td>
            <td>{{ laptop.name }}</td>
            <td>
                 <a class="text-decoration-none" href="{{ path('laptop_detail', {'id' : laptop.id }) }}">
                    <img src="{{ laptop.image }}" width="150" height="100">
                </a>
           </td>
            <td>
                <a class="text-decoration-none" href="{{ path('laptop_detail', {'id' : laptop.id }) }}">
                    <img src="{{ asset('images/buttons/detail.png') }}" width="40" height="40">
                </a>
                <a class="text-decoration-none" href="{{ path('laptop_edit', {'id' : laptop.id }) }}">
                    <img src="{{ asset('images/buttons/edit.png') }}" width="40" height="40">
                </a>
                <a class="text-decoration-none" href="{{ path('laptop_delete', {'id' : laptop.id }) }}"
                onclick="return confirm('You are about to delete this laptop. Proceed with deletion?');"
                >
                    <img src="{{ asset('images/buttons/delete.png') }}" width="40" height="40">
                </a>
            </td>
        </tr>
    {% endfor %}
    </table>
</div>
{% endblock %}
