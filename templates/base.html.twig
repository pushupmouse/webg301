<!DOCTYPE html>
<html>
	<head>
		<meta charset="UTF-8">
		<title>
			{% block title %}Laptop Shop
			{% endblock %}
		</title>
		<link href="/css/style.css" rel="stylesheet">
		<link rel="stylesheet" href="/css/home.css">
		<link rel="stylesheet" href="/css/loginstyle.css">
		{% block stylesheets %}
			<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-gH2yIJqKdNHPEq0n4Mqa/HGKIhSkIHeL5AyhkYV8i59U5AR6csBvApHHNl/vI1Bx" crossorigin="anonymous">
		{% endblock %}

		{% block javascripts %}
			<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/js/bootstrap.bundle.min.js" integrity="sha384-A3rJD856KowSb7dwlZdYEkO39Gagi7vIsF0jrRAoQmDKKtQBHUuLZ9AsSv4jD4Xa" crossorigin="anonymous"></script>
		{% endblock %}
	</head>
	<body>
		{% block header %}
			<nav>
				<ul>
					<li><a class="active"href="{{ path('home') }}">Home</a></li>
					<li><a href="{{path('laptop_shop')}}">Shop</a></li>
					<li><a href="{{path('laptop_index')}}">Laptop</a></li>
					<li><a href="{{path('brand_index')}}">Brand</a></li>
					<li><a href="{{path('category_index')}}">Category</a></li>
					<li><a href="{{path('manufacturer_index')}}">Manufacturer</a></li>
					<li><a href="{{path('origin_index')}}">Origin</a></li>
					<li><a href="#" data-bs-toggle="modal" data-bs-target="#modelId">About</a></li>
					<li>
						{% if app.user != null %}
							<a class="nav-link text-warning" href="{{ path('app_logout')}}">Logout:
								<i>
									<u>{{ app.user.username }}</u>
								</i>
							</a>
						{% endif %}
					</li>
				</ul>
			</nav>

			<!-- Modal -->
			<div class="modal fade" id="modelId" tabindex="-1" role="dialog" aria-labelledby="modelTitleId" aria-hidden="true">
				<div class="modal-dialog" role="document">
					<div class="modal-content">
						<div class="modal-header">
							<h5 class="modal-title">About this website</h5>
							<button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
						</div>
						<div class="modal-body">
							This website was made in collaboration by Vu Tran Hung Duc, Nguyen Viet Anh, Nguyen Khanh Hung.
						</div>
						<div class="modal-footer">
							<button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
						</div>
					</div>
				</div>
			</div>

		{% endblock %}
		{% block flash %}
			<div class="container col-md-6 text-center mt-3">
				{% for flash in app.session.flashBag.get('Success') %}
					<p class="alert alert-success">{{ flash }}</p>
				{% endfor %}
				{% for flash in app.session.flashBag.get('Warning') %}
					<p class="alert alert-warning">{{ flash }}</p>
				{% endfor %}
				{% for flash in app.session.flashBag.get('Danger') %}
					<p class="alert alert-danger">{{ flash }}</p>
				{% endfor %}
			</div>
		{% endblock %}
		{% block body %}{% endblock %}
		{% block footer %}
			<div class="container mt-3 text-center">
				<p class="alert alert-light h6">WEBG301 - ASSIGNMENT - SUMMER 2022</p>
			</div>
		{% endblock %}
	</body>
</html>
