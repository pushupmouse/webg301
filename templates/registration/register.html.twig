{% form_theme registrationForm 'bootstrap_5_layout.html.twig' %}
{% extends 'base.html.twig' %}
{% block title %}Register{% endblock %}

{% block header %}{% endblock %}
{% block body %}
<div class="container text-center col-md-4 mt-3 card bg-light">
    <h1 class="text-success">Register</h1>

    {{ form_start(registrationForm) }}
        {{ form_row(registrationForm.username) }}
        {{ form_row(registrationForm.plainPassword, {
            label: 'Password'
        }) }}
        {{ form_row(registrationForm.agreeTerms) }}

        <button type="submit" class="btn btn-info mb-3">Register</button>
        <br>
        <a class="text-decoration-none" href="{{ path('app_login') }}">Go back to login page</a>
    {{ form_end(registrationForm) }}
</div>
{% endblock %}
{% block footer %}{% endblock %}