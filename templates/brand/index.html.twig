{% extends "base.html.twig" %}

{% block body %}
<div class="container col-md-8 text-center mt-3">
<table class="table table-light">
    <tr>
        <th colspan="3">
            <h1 class="text text-primary">Brand List</h1>
        </th>
        <th>
            <a class="text-decoration-none" href="{{ path('brand_add') }}">
                <img src="{{ asset('images/buttons/add.png') }}" width="40" height="40">
            </a>
        </th>
    </tr>
    <tr>
        <th class="text text-success">Brand Id</th>
        <th class="text text-success">Brand Name</th>
        <th class="text text-success">Brand Image</th>
        <th class="text text-success">Actions</th>
    </tr>
    {% for brand in brands %}
        <tr>
            <td>{{ brand.id }}</td>
            <td>{{ brand.name }}</td>
            <td>
                <a class="text-decoration-none" href="{{ path('brand_detail', {'id' : brand.id }) }}">
                    <img src="{{ brand.image }}" width="100" height="100">
                </a>
           </td>
            <td>
                <a class="text-decoration-none" href="{{ path('brand_detail', {'id' : brand.id }) }}">
                    <img src="{{ asset('images/buttons/detail.png') }}" width="40" height="40">
                </a>
                <a class="text-decoration-none" href="{{ path('brand_edit', {'id' : brand.id }) }}">
                    <img src="{{ asset('images/buttons/edit.png') }}" width="40" height="40">
                </a>
                <a class="text-decoration-none" href="{{ path('brand_delete', {'id' : brand.id }) }}"
                onclick="return confirm('Are you sure to delete this brand ?');"
                >
                    <img src="{{ asset('images/buttons/delete.png') }}" width="40" height="40">
                </a>
            </td>
        </tr>
    {% endfor %}
</table>
</div>
{% endblock %}